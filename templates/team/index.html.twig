{% extends 'base.html.twig' %}

{% block title %}Pcm - Inscription au tournoi{% endblock %}

{% block body %}
    <div class="w-full bg-[#0d079f]">
        <!-- Top white line -->
{#        <div class="h-2 w-full bg-white"></div>#}

        <!-- Main content section between the white lines -->
        <div class="relative flex items-center justify-between px-4 py-2">
            <!-- Logo circle -->
            <div class="flex items-center">
                <div class="relative z-10 h-24 w-24 overflow-hidden rounded-full border-4 border-white">
                    <img src="{{ asset('images/bouleHeader.png') }}" alt="boule de pétanque" class="h-full w-full object-cover"/>
                </div>

                <!-- Title -->
                <h1 class="ml-4 text-3xl font-bold text-white">Crée une équipe !</h1>
            </div>

            <!-- Social icons -->
            <div class="flex items-center gap-4">
                <!-- Facebook icon -->
                <a href="#" class="text-white hover:text-gray-200 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                    </svg>
                </a>
                <!-- Mail icon -->
                <a href="{{ path('app_contact') }}" class="text-white hover:text-gray-200 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </a>
            </div>
        </div>

        <!-- Bottom white line -->
{#        <div class="h-2 w-full bg-white"></div>#}
    </div>

    <main class="min-h-[calc(100vh-120px)] bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
        <!-- Éléments décoratifs -->
        <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0 opacity-25">
            <div class="absolute -top-20 -left-20 w-64 h-64 rounded-full bg-[#0d079f]/25"></div>
            <div class="absolute top-1/3 right-10 w-96 h-96 rounded-full bg-[#0d079f]/25"></div>
            <div class="absolute bottom-10 left-1/4 w-72 h-72 rounded-full bg-[#0d079f]/25"></div>

            <!-- Silhouettes de boules de pétanque -->
            <div class="absolute top-20 right-20 w-16 h-16 rounded-full border-2 border-gray-400"></div>
            <div class="absolute bottom-40 left-20 w-12 h-12 rounded-full border-2 border-gray-400"></div>
            <div class="absolute top-1/2 left-1/3 w-10 h-10 rounded-full border-2 border-gray-400"></div>
        </div>

        <div class="max-w-7xl mx-auto relative z-10">
            <div class="text-center mb-12">
                <h2 class="text-4xl font-extrabold text-gray-900 mb-4">Inscription au tournoi</h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">Formez votre équipe et participez à notre prochain tournoi de pétanque à élimination direct !</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Colonne de gauche: Informations sur le tournoi -->
                <div class="lg:col-span-1">
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
                        <div class="bg-[#0d079f] px-6 py-4">
                            <h3 class="text-xl font-bold text-white">Informations</h3>
                        </div>

                        <div class="p-6 space-y-6">
                            <!-- Date -->
                            <div class="flex items-start">
                                <div class="flex-shrink-0">
                                    <div class="h-10 w-10 rounded-full bg-[#0d079f]/10 flex items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#0d079f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <h4 class="text-lg font-medium text-gray-900">Date du tournoi</h4>
                                    <p class="mt-1 text-gray-600">{{ tournament.dateTournament|date('d/m/Y - h:s') }}h</p>
                                </div>
                            </div>

                            <!-- Lieu -->
                            <div class="flex items-start">
                                <div class="flex-shrink-0">
                                    <div class="h-10 w-10 rounded-full bg-[#0d079f]/10 flex items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#0d079f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <h4 class="text-lg font-medium text-gray-900">Lieu</h4>
                                    <p class="mt-1 text-gray-600">{{ tournament.adresse }}</p>
                                </div>
                            </div>

                            <!-- Format -->
                            <div class="flex items-start">
                                <div class="flex-shrink-0">
                                    <div class="h-10 w-10 rounded-full bg-[#0d079f]/10 flex items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#0d079f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <h4 class="text-lg font-medium text-gray-900">Format</h4>
                                    <p class="mt-1 text-gray-600">{{ tournament.typeTournament|join(', ') }}</p>
                                </div>
                            </div>

                            <!-- Prix -->
                            <div class="flex items-start">
                                <div class="flex-shrink-0">
                                    <div class="h-10 w-10 rounded-full bg-[#0d079f]/10 flex items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#0d079f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <h4 class="text-lg font-medium text-gray-900">Frais d'inscription</h4>
                                    <p class="mt-1 text-gray-600">{{ tournament.price }}€ par équipe</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Règlement -->
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                        <div class="bg-[#0d079f] px-6 py-4">
                            <h3 class="text-xl font-bold text-white">Règlement</h3>
                        </div>

                        <div class="p-6">
                            <ul class="space-y-3 text-gray-600">
                                <li class="flex items-start">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#0d079f] mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span>Tournoi ouvert à tous les licenciés et non-licenciés</span>
                                </li>
                                <li class="flex items-start">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#0d079f] mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span>Parties en 13 points</span>
                                </li>
                                <li class="flex items-start">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#0d079f] mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span>Elimination direct en cas de défaite</span>
                                </li>

                                <li class="flex items-start">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#0d079f] mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span>Payement sur place aucun payement en ligne.</span>
                                </li>
                            </ul>

                            <div class="mt-6 p-4 bg-yellow-50 rounded-lg border border-yellow-200">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <h4 class="text-sm font-medium text-yellow-800">Important</h4>
                                        <p class="mt-1 text-sm text-yellow-700">Nombre d'équipes limité à {{ tournament.teamsMax() }}.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Colonne de droite: Formulaire d'inscription -->
                <div class="lg:col-span-2">
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                        <div class="bg-[#0d079f] px-6 py-4">
                            <h3 class="text-xl font-bold text-white">Inscription de votre équipe</h3>
                        </div>

                        <div class="p-6">
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-6">
                                    <div class="flex">
                                        <div class="flex-shrink-0">
                                            <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                            </svg>
                                        </div>
                                        <div class="ml-3">
                                            <p class="text-sm text-green-700">
                                                Vous êtes connecté en tant que <span class="font-medium">{{ app.user.email }}</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="space-y-6">
                                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                                    <!-- Nom de l'équipe -->
                                    <div>
                                        {{ form_label(form.teamName, 'Nom de l\'équipe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                        <div class="relative rounded-md shadow-sm">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                                </svg>
                                            </div>
                                            {{ form_widget(form.teamName, {'attr': {'class': 'pl-10 block w-full px-3 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#0d079f] focus:border-[#0d079f]', 'placeholder': 'Ex: Les Champions de la Pétanque'}}) }}
                                        </div>
                                        {{ form_errors(form.teamName, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                                    </div>

                                    <!-- Autres champs du formulaire -->
                                    {% for field in form %}
                                        {% if field.vars.name != 'teamName' and field.vars.name != '_token' %}
                                            <div>
                                                {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                                {{ form_widget(field, {'attr': {'class': 'block w-full px-3 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#0d079f] focus:border-[#0d079f]'}}) }}
                                                {{ form_errors(field, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                                            </div>
                                        {% endif %}
                                    {% endfor %}

                                    <!-- reCAPTCHA -->
                                    <div class="flex justify-center my-4">
                                        <div class="g-recaptcha" data-sitekey="{{ recaptcha_site_key }}"></div>
                                    </div>

                                    <!-- Bouton de soumission -->
                                    <div>
                                        <button type="submit"
                                                class="w-full flex justify-center items-center py-3 px-4 border border-transparent rounded-md shadow-sm text-white bg-[#0d079f] hover:bg-[#0a0580] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#0d079f] transition-colors duration-200">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                            Créer mon équipe
                                        </button>
                                    </div>

                                    {{ form_end(form) }}
                                </div>
                            {% else %}
                                <div class="text-center py-8">
                                    <div class="mx-auto h-16 w-16 rounded-full bg-[#0d079f]/10 flex items-center justify-center mb-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-[#0d079f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                        </svg>
                                    </div>
                                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Vous devez être connecté pour créer une équipe</h2>
                                    <p class="text-gray-600 mb-6">Pour participer au tournoi, veuillez vous connecter à votre compte ou créer un nouveau compte.</p>
                                    <div class="flex flex-col sm:flex-row justify-center gap-4">
                                        <a href="{{ path('app_login') }}" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-[#0d079f] hover:bg-[#0a0580] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#0d079f] transition-colors duration-200">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                                            </svg>
                                            Se connecter
                                        </a>
                                        <a href="{{ path('app_register') }}" class="inline-flex items-center justify-center px-6 py-3 border border-[#0d079f] text-base font-medium rounded-md shadow-sm text-[#0d079f] bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#0d079f] transition-colors duration-200">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zm-5 10v1a3 3 0 003 3h3a3 3 0 003-3v-1" />
                                            </svg>
                                            Créer un compte
                                        </a>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Prix et récompenses -->
{#                    <div class="mt-8 bg-gradient-to-r from-yellow-50 to-yellow-100 rounded-xl shadow-lg overflow-hidden">#}
{#                        <div class="p-6">#}
{#                            <h3 class="text-2xl font-bold text-yellow-800 mb-4 flex items-center">#}
{#                                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">#}
{#                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />#}
{#                                </svg>#}
{#                                Prix et récompenses#}
{#                            </h3>#}

{#                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">#}
{#                                <div class="bg-white rounded-lg shadow p-4 border-t-4 border-yellow-400">#}
{#                                    <div class="flex items-center justify-center mb-2">#}
{#                                        <div class="text-yellow-500 text-3xl font-bold">1er</div>#}
{#                                    </div>#}
{#                                    <p class="text-center text-gray-700 font-medium">{{ tournament.firstPrize }}€ + Trophée</p>#}
{#                                </div>#}

{#                                <div class="bg-white rounded-lg shadow p-4 border-t-4 border-gray-400">#}
{#                                    <div class="flex items-center justify-center mb-2">#}
{#                                        <div class="text-gray-500 text-3xl font-bold">2ème</div>#}
{#                                    </div>#}
{#                                    <p class="text-center text-gray-700 font-medium">{{ tournament.secondPrize }}€ + Médailles</p>#}
{#                                </div>#}

{#                                <div class="bg-white rounded-lg shadow p-4 border-t-4 border-yellow-700">#}
{#                                    <div class="flex items-center justify-center mb-2">#}
{#                                        <div class="text-yellow-700 text-3xl font-bold">3ème</div>#}
{#                                    </div>#}
{#                                    <p class="text-center text-gray-700 font-medium">{{ tournament.thirdPrize }}€ + Médailles</p>#}
{#                                </div>#}
{#                            </div>#}

{#                            <p class="text-yellow-700 text-sm text-center">Des lots supplémentaires seront distribués aux équipes finalistes.</p>#}
{#                        </div>#}
{#                    </div>#}
                </div>
            </div>

            <!-- Compteur d'équipes inscrites -->
            <div class="mt-12 bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="p-6">
                    <div class="flex flex-col md:flex-row items-center justify-between">
                        <div class="mb-4 md:mb-0">
                            <h3 class="text-xl font-bold text-gray-900 mb-2">Équipes inscrites</h3>
{#                            <p class="text-gray-600">Rejoignez les {{ tournament.registeredTeams }} équipes déjà inscrites pour ce tournoi !</p>#}
                        </div>

                        <div class="flex items-center">
                            <div class="w-64 bg-gray-200 rounded-full h-4 mr-4">
{#                                <div class="bg-[#0d079f] h-4 rounded-full" style="width: {{ (tournament.registeredTeams / tournament.teamsMax) * 100 }}%"></div>#}
                            </div>
{#                            <div class="text-lg font-bold text-[#0d079f]">{{ tournament.registeredTeams }}/{{ tournament.maxTeams }}</div>#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}
