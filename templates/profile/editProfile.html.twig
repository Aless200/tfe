{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="w-full bg-[#0d079f]">
        <!-- Top white line -->
        {#        <div class="h-2 w-full bg-white"></div>#}

        <!-- Main content section between the white lines -->
        <div class="relative flex items-center justify-between px-4 py-2">
            <!-- Logo circle -->
            <div class="flex items-center">
                <div class="relative z-10 h-24 w-24 overflow-hidden rounded-full border-4 border-white p-2">
                    <img src="{{ asset('images/bouleHeader.png') }}" alt="boule de pétanque" class="h-full w-full object-cover mt-1"/>
                </div>
                <!-- Title -->
                <h1 class="ml-4 text-3xl font-bold text-white">Modifier mon profil</h1>
            </div>

            <!-- Social icons -->
            <div class="flex items-center gap-4">
                <!-- Facebook icon -->
                <a href="#" class="text-white hover:text-gray-200 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                    </svg>
                </a>
                <!-- Mail icon -->
                <a href="{{ path('app_contact') }}" class="text-white hover:text-gray-200 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </a>
            </div>
        </div>

        <!-- Bottom white line -->
        {#        <div class="h-2 w-full bg-white"></div>#}
    </div>

    <main class="min-h-[calc(100vh-120px)] bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
        <!-- Éléments décoratifs -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none z-0">
            <div class="absolute -top-20 -left-20 w-64 h-64 rounded-full bg-[#0d079f]/20"></div>
            <div class="absolute top-1/3 right-10 w-96 h-96 rounded-full bg-[#0d079f]/30"></div>
            <div class="absolute bottom-10 left-1/4 w-72 h-72 rounded-full bg-[#0d079f]/20"></div>

            <!-- Silhouettes de boules de pétanque -->
            <div class="absolute top-20 right-20 w-16 h-16 rounded-full border-2 border-gray-400/25"></div>
            <div class="absolute bottom-40 left-20 w-12 h-12 rounded-full border-2 border-gray-400/25"></div>
            <div class="absolute top-1/2 left-1/3 w-10 h-10 rounded-full border-2 border-gray-400/25"></div>
        </div>

        <div class="max-w-7xl mx-auto relative z-10">
            <!-- Intro section -->
            <div class="mb-8 text-center">
                <h2 class="text-4xl font-extrabold text-gray-900 mb-4">Modifier vos informations</h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">Mettez à jour votre profil et personnalisez votre expérience sur notre plateforme.</p>
            </div>

            <!-- Form card -->
            <div class="max-w-2xl mx-auto">
                <div class="bg-white rounded-xl overflow-hidden shadow-lg border border-gray-100">
                    <!-- Banner image -->
                    <div class="h-32 w-full bg-cover bg-center relative" style="background-image: url('{{ asset('/images/bannerProfile.jpg') }}')">
                        <!-- Profile content -->
                        <div class="relative px-6 py-8">
                            <!-- Avatar -->
                            <div class="absolute -bottom-12 left-6">
                                <div class="h-24 w-24 rounded-full border-4 border-white overflow-hidden shadow-md">
                                    <img src="{{ asset('images/avatar/' ~ app.user.imageAvatar) }}" alt="Avatar de {{ app.user.firstName }}" class="h-full w-full object-cover" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form content -->
                    <div class="p-6 pt-16">
                        <div class="flex items-center mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-[#0d079f] mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <h3 class="text-2xl font-bold text-gray-800">Informations personnelles</h3>
                        </div>

                        {{ form_start(formEditProfile, {'attr': {'class': 'space-y-6'}}) }}

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Prénom -->
                            <div class="form-group">
                                {{ form_label(formEditProfile.firstName, 'Prénom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(formEditProfile.firstName, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#0d079f] focus:ring focus:ring-[#0d079f] focus:ring-opacity-20 transition duration-200'}}) }}
                                {{ form_errors(formEditProfile.firstName) }}
                            </div>

                            <!-- Nom -->
                            <div class="form-group">
                                {{ form_label(formEditProfile.lastName, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(formEditProfile.lastName, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#0d079f] focus:ring focus:ring-[#0d079f] focus:ring-opacity-20 transition duration-200'}}) }}
                                {{ form_errors(formEditProfile.lastName) }}
                            </div>
                        </div>

                        <!-- Téléphone -->
                        <div class="form-group">
                            {{ form_label(formEditProfile.phoneNumber, 'Téléphone', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            <div class="relative">
                                {{ form_widget(formEditProfile.phoneNumber, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#0d079f] focus:ring focus:ring-[#0d079f] focus:ring-opacity-20 transition duration-200 pl-10'}}) }}
                                <div class="absolute inset-y-0 left-0 flex items-center pl-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                    </svg>
                                </div>
                            </div>
                            {{ form_errors(formEditProfile.phoneNumber) }}
                        </div>

                        <!-- Avatar -->
                        <div class="form-group mt-8">
                            <h4 class="text-lg font-medium text-gray-900 mb-4">Photo de profil</h4>

                            <div class="flex items-start space-x-6">
                                <!-- Image actuelle -->
                                <div class="flex-shrink-0">
                                    <div class="relative h-32 w-32 rounded-lg overflow-hidden bg-gray-100 border border-gray-200">
                                        <img src="{{ asset('images/avatar/' ~ app.user.imageAvatar) }}"
                                             alt="Avatar actuel"
                                             class="h-full w-full object-cover"
                                             id="avatar-preview">
                                    </div>
                                </div>

                                <!-- Upload controls -->
                                <div class="flex-1">
                                    <div class="space-y-2">
                                        <label class="cursor-pointer">
                                            <span class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#0d079f] transition-colors duration-200">
                                                <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                                                </svg>
                                                Changer d'avatar
                                            </span>
                                            {{ form_widget(formEditProfile.imageFile, {'attr': {'class': 'sr-only', 'id': 'avatar-upload'}}) }}
                                        </label>
                                        <span class="text-sm text-gray-500" id="file-name">
                                            Aucun fichier sélectionné
                                        </span>
                                    </div>
                                    <p class="mt-2 text-xs text-gray-500">PNG, JPG, JPEG jusqu'à 2MB</p>
                                    <p class="mt-1 text-xs text-gray-500">Dimensions recommandées : 400x400 pixels</p>
                                    {{ form_errors(formEditProfile.imageFile) }}
                                </div>
                            </div>
                        </div>

                        <!-- Liens vers d'autres actions -->
                        <div class="flex flex-col sm:flex-row items-center justify-between pt-8 border-t border-gray-100 mt-8 gap-4">
                            <a href="{{ path('app_profile') }}" class="w-full sm:w-auto inline-flex items-center justify-center px-5 py-2.5 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200 shadow-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                                </svg>
                                Retour au profil
                            </a>

                            <button type="submit" class="w-full sm:w-auto inline-flex items-center justify-center px-5 py-2.5 bg-[#0d079f] text-white font-medium rounded-lg hover:bg-[#0a0580] transition-colors duration-200 shadow-md">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Enregistrer les modifications
                            </button>
                        </div>

                        {{ form_end(formEditProfile) }}
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gestion de l'upload d'image avec prévisualisation
            const fileInput = document.getElementById('avatar-upload');
            const fileNameSpan = document.getElementById('file-name');
            const imagePreview = document.getElementById('avatar-preview');

            if (fileInput && fileNameSpan && imagePreview) {
                // Sauvegarde le texte par défaut
                const defaultText = fileNameSpan.textContent;

                // Gestion du changement de fichier
                fileInput.addEventListener('change', function(e) {
                    if (e.target.files.length > 0) {
                        const file = e.target.files[0];
                        fileNameSpan.textContent = file.name;

                        // Prévisualisation de l'image
                        const reader = new FileReader();
                        reader.onload = function(event) {
                            imagePreview.src = event.target.result;
                        };
                        reader.readAsDataURL(file);
                    } else {
                        fileNameSpan.textContent = defaultText;
                    }
                });
            }
        });
    </script>
{% endblock %}