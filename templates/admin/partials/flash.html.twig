{% for label, messages in app.flashes(['admin_success', 'admin_warning', 'admin_error']) %}
    {% for message in messages %}
        <div id="alert-{{ loop.index }}"
             class="fixed top-6 left-1/2 transform -translate-x-1/2 z-50 w-full max-w-md px-4">
            <div class="flex items-center p-4 text-sm rounded-lg shadow-lg animate-fade-in
                      {% if label == 'admin_success' %}text-green-800 bg-green-50 border border-green-200{% endif %}
                      {% if label == 'admin_warning' %}text-yellow-800 bg-yellow-50 border border-yellow-200{% endif %}
                      {% if label == 'admin_error' %}text-red-800 bg-red-50 border border-red-200{% endif %}">
                <svg class="w-5 h-5 mr-3 shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    {% if label == 'admin_success' %}
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    {% elseif label == 'admin_warning' %}
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    {% elseif label == 'admin_error' %}
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    {% endif %}
                </svg>
                <span class="flex-grow">{{ message }}</span>
                <button onclick="this.closest('div').remove()"
                        class="ml-4 text-current hover:text-opacity-75 focus:outline-none">
                    <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>
    {% endfor %}
{% endfor %}