{% extends 'admin/base.html.twig' %}

{% block title %}Ajouter une galerie{% endblock %}

{% block body %}
    <div class="flex">
        <div class="w-64 h-screen bg-gray-100">
            {# Sidebar ici si nécessaire #}
        </div>

        <div class="flex-1 p-6 overflow-hidden">
            <div class="mb-8">
                <h1 class="text-2xl font-extrabold text-gray-900 sm:text-4xl">
                    Créer une nouvelle galerie
                </h1>
                <p class="mt-3 text-sm text-gray-500">
                    Remplissez les informations de votre galerie
                </p>
            </div>

            <div class="bg-white shadow-md sm:rounded-lg p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <div class="grid grid-cols-1 gap-6">
                    {{ form_row(form.title) }}

                    {{ form_row(form.description , {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 min-h-[150px]', 'rows': '6'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="pt-6 flex justify-between">
                    <a href="{{ path('app_gallery_admin') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50">
                        Retour
                    </a>
                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" data-turbo="false">
                        Enregistrer
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
