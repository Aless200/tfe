{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="w-full bg-[#0d079f]">
        <div class="relative flex items-center justify-between px-4 py-2">
            <div class="flex items-center">
                <div class="relative z-10 h-24 w-24 overflow-hidden rounded-full border-4 border-white p-2">
                    <img src="{{ asset('images/bouleHeader.png') }}" alt="boule de pétanque" class="h-full w-full object-cover mt-1"/>
                </div>
                <h1 class="ml-4 text-3xl font-bold text-white">Inscription</h1>
            </div>
            <div class="flex items-center gap-4">
                <a href="https://www.facebook.com" target="_blank" class="text-white hover:text-gray-200 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                    </svg>
                </a>
                <a href="{{ path('app_contact') }}" class="text-white hover:text-gray-200 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </a>
            </div>
        </div>
    </div>

    <div class="min-h-[calc(100vh-120px)] bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
        <div class="absolute inset-0 overflow-hidden pointer-events-none z-0">
            <div class="absolute -top-20 -left-20 w-64 h-64 rounded-full bg-[#0d079f]/20"></div>
            <div class="absolute top-1/3 right-10 w-96 h-96 rounded-full bg-[#0d079f]/30"></div>
            <div class="absolute bottom-10 left-1/4 w-72 h-72 rounded-full bg-[#0d079f]/20"></div>

            <!-- Silhouettes de boules de pétanque -->
            <div class="absolute top-20 right-20 w-16 h-16 rounded-full border-2 border-gray-400/25"></div>
            <div class="absolute bottom-40 left-20 w-12 h-12 rounded-full border-2 border-gray-400/25"></div>
            <div class="absolute top-1/2 left-1/3 w-10 h-10 rounded-full border-2 border-gray-400/25"></div>
        </div>

        <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 relative z-10">
            <div class="flex flex-col justify-center">
                <div class="text-center md:text-left">
                    <h2 class="text-3xl font-extrabold text-gray-900 mb-4">Rejoignez notre communauté</h2>
                    <p class="text-lg text-gray-600 mb-8">Créez un compte pour accéder à toutes les fonctionnalités réservées aux membres.</p>

                    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
                        <h3 class="text-xl font-bold text-[#0d079f] mb-4 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Avantages membres
                        </h3>
                        <ul class="space-y-3">
                            <li class="flex items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                <span class="text-gray-700">Commentaires sur les galeries photos et les actualités</span>
                            </li>
                            <li class="flex items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                <span class="text-gray-700">Inscription de votre équipe aux tournois</span>
                            </li>
                            <li class="flex items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                <span class="text-gray-700">Accès aux résultats et classements</span>
                            </li>
                        </ul>
                    </div>

                    <div class="bg-[#0d079f]/5 rounded-lg p-6 border border-[#0d079f]/20">
                        <h3 class="text-lg font-semibold text-gray-800 mb-2">Déjà membre ?</h3>
                        <p class="text-gray-600 mb-4">Connectez-vous pour accéder à votre compte.</p>
                        <a href="{{ path('app_login') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-[#0d079f] hover:bg-[#0a0580] transition-colors duration-200">
                            Se connecter
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <div class="flex flex-col justify-center">
                <div class="bg-white py-8 px-6 shadow-xl rounded-xl border border-gray-100 max-w-md mx-auto w-full">
                    <div class="flex justify-center mb-6">
                        <div class="h-16 w-16 rounded-full bg-[#0d079f]/10 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-[#0d079f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                            </svg>
                        </div>
                    </div>

                    <h2 class="text-center text-2xl font-bold text-gray-900 mb-6">Créer un compte</h2>

                    {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

                    <div>
                        {{ form_label(registrationForm.firstName, 'Prénom', {
                            'label_attr': {
                                'class': 'block text-sm font-medium ' ~ (registrationForm.firstName.vars.errors|length ? 'text-red-700' : 'text-gray-700') ~ ' mb-1'
                            }
                        }) }}
                        {{ form_widget(registrationForm.firstName, {
                            'attr': {
                                'class': 'mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none ' ~
                                (registrationForm.firstName.vars.errors|length ?
                                'border-red-500 focus:ring-red-500 focus:border-red-500' :
                                'border-gray-300 focus:ring-indigo-500 focus:border-indigo-500')
                            }
                        }) }}
                        {% if registrationForm.firstName.vars.errors|length %}
                            {% for error in registrationForm.firstName.vars.errors %}
                                <p class="mt-2 text-sm text-red-600">
                                    <span class="font-medium">Erreur !</span> {{ error.message }}
                                </p>
                            {% endfor %}
                        {% endif %}
                    </div>

                    <div>
                        {{ form_label(registrationForm.lastName, 'Nom', {
                            'label_attr': {
                                'class': 'block text-sm font-medium ' ~ (registrationForm.lastName.vars.errors|length ? 'text-red-700' : 'text-gray-700') ~ ' mb-1'
                            }
                        }) }}
                        {{ form_widget(registrationForm.lastName, {
                            'attr': {
                                'class': 'mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none ' ~
                                (registrationForm.lastName.vars.errors|length ?
                                'border-red-500 focus:ring-red-500 focus:border-red-500' :
                                'border-gray-300 focus:ring-indigo-500 focus:border-indigo-500')
                            }
                        }) }}
                        {% if registrationForm.lastName.vars.errors|length %}
                            {% for error in registrationForm.lastName.vars.errors %}
                                <p class="mt-2 text-sm text-red-600">
                                    <span class="font-medium">Erreur !</span> {{ error.message }}
                                </p>
                            {% endfor %}
                        {% endif %}
                    </div>

                    <div>
                        {{ form_label(registrationForm.email, 'Email', {
                            'label_attr': {
                                'class': 'block text-sm font-medium ' ~ (registrationForm.email.vars.errors|length ? 'text-red-700' : 'text-gray-700') ~ ' mb-1'
                            }
                        }) }}
                        {{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none ' ~
                                (registrationForm.email.vars.errors|length ?
                                'border-red-500 focus:ring-red-500 focus:border-red-500' :
                                'border-gray-300 focus:ring-indigo-500 focus:border-indigo-500')
                            }
                        }) }}
                        {% if registrationForm.email.vars.errors|length %}
                            {% for error in registrationForm.email.vars.errors %}
                                <p class="mt-2 text-sm text-red-600">
                                    <span class="font-medium">Erreur !</span> {{ error.message }}
                                </p>
                            {% endfor %}
                        {% endif %}
                    </div>

                    <div>
                        {{ form_label(registrationForm.password, 'Mot de passe', {
                            'label_attr': {
                                'class': 'block text-sm font-medium ' ~ (registrationForm.password.vars.errors|length ? 'text-red-700' : 'text-gray-700') ~ ' mb-1'
                            }
                        }) }}
                        {{ form_widget(registrationForm.password, {
                            'attr': {
                                'class': 'mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none ' ~
                                (registrationForm.password.vars.errors|length ?
                                'border-red-500 focus:ring-red-500 focus:border-red-500' :
                                'border-gray-300 focus:ring-indigo-500 focus:border-indigo-500')
                            }
                        }) }}
                        {% if registrationForm.password.vars.errors|length %}
                            {% for error in registrationForm.password.vars.errors %}
                                <p class="mt-2 text-sm text-red-600">
                                    <span class="font-medium">Erreur !</span> {{ error.message }}
                                </p>
                            {% endfor %}
                        {% endif %}
                    </div>

                    <div>
                        {{ form_label(registrationForm.phoneNumber, 'Numéro de téléphone', {
                            'label_attr': {
                                'class': 'block text-sm font-medium ' ~ (registrationForm.phoneNumber.vars.errors|length ? 'text-red-700' : 'text-gray-700') ~ ' mb-1'
                            }
                        }) }}
                        {{ form_widget(registrationForm.phoneNumber, {
                            'attr': {
                                'class': 'mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none ' ~
                                (registrationForm.phoneNumber.vars.errors|length ?
                                'border-red-500 focus:ring-red-500 focus:border-red-500' :
                                'border-gray-300 focus:ring-indigo-500 focus:border-indigo-500')
                            }
                        }) }}
                        {% if registrationForm.phoneNumber.vars.errors|length %}
                            {% for error in registrationForm.phoneNumber.vars.errors %}
                                <p class="mt-2 text-sm text-red-600">
                                    <span class="font-medium">Erreur !</span> {{ error.message }}
                                </p>
                            {% endfor %}
                        {% endif %}
                    </div>

                    <div>
                        {{ form_label(registrationForm.imageFile, 'Photo de profil', {
                            'label_attr': {
                                'class': 'block text-sm font-medium ' ~ (registrationForm.imageFile.vars.errors|length ? 'text-red-700' : 'text-gray-700') ~ ' mb-1'
                            }
                        }) }}
                        <div class="mt-1 flex items-center">
                            <label class="cursor-pointer">
            <span class="inline-flex items-center px-3 py-2 border shadow-sm text-sm leading-4 font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 {{ registrationForm.imageFile.vars.errors|length ? 'border-red-500 text-red-700 bg-red-50 hover:bg-red-100 focus:ring-red-500' : 'border-gray-300 text-gray-700 bg-white hover:bg-gray-50 focus:ring-indigo-500' }}">
                <svg class="-ml-1 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                </svg>
                Choisir un fichier
            </span>
                                {{ form_widget(registrationForm.imageFile, {'attr': {'class': 'sr-only'}}) }}
                            </label>
                            <span class="ml-2 text-sm {{ registrationForm.imageFile.vars.errors|length ? 'text-red-500' : 'text-gray-500' }}" id="file-name">
            Aucun fichier sélectionné
        </span>
                        </div>
                        <p class="mt-1 text-xs {{ registrationForm.imageFile.vars.errors|length ? 'text-red-500' : 'text-gray-500' }}">PNG, JPG, JPEG jusqu'à 5MB</p>
                        {% if registrationForm.imageFile.vars.errors|length %}
                            {% for error in registrationForm.imageFile.vars.errors %}
                                <p class="mt-2 text-sm text-red-600">
                                    <span class="font-medium">Erreur !</span> {{ error.message }}
                                </p>
                            {% endfor %}
                        {% endif %}
                    </div>

                    <div>
                        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-[#0d079f] hover:bg-[#0a0580] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#0d079f]" data-turbo="false">
                            S'inscrire
                        </button>
                    </div>

                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('turbo:load', function() {
            const initFileInput = () => {
                const fileInput = document.querySelector('input[type="file"][name*="[imageFile]"]');
                const fileNameSpan = document.getElementById('file-name');

                if (fileInput && fileNameSpan) {
                    const defaultText = fileNameSpan.textContent;

                    fileInput.addEventListener('change', function(e) {
                        fileNameSpan.textContent = e.target.files[0]?.name || defaultText;
                    });

                    fileInput.form.addEventListener('turbo:submit-end', function() {
                        if (fileInput.form.querySelector('[data-turbo-submit-success]')) {
                            fileInput.value = '';
                            fileNameSpan.textContent = defaultText;
                        }
                    });
                }
            };

            initFileInput();

            document.addEventListener('turbo:before-render', function() {
                initFileInput();
            });
        });
    </script>
{% endblock %}
