{% extends 'base.html.twig' %}

{% block title %}{{ gallery.title }} - Galerie Photos{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Styles pour la nouvelle galerie seulement */
        .lightgallery-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 8px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .gallery-item {
            position: relative;
            overflow: hidden;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: block;
            text-decoration: none;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .gallery-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            transition: transform 0.3s ease;
        }

        .gallery-item:hover img {
            transform: scale(1.05);
        }

        /* Specific grid item sizes for masonry effect */
        .gallery-item:nth-child(1) { grid-row: span 2; }
        .gallery-item:nth-child(3) { grid-row: span 2; }
        .gallery-item:nth-child(6) { grid-row: span 2; }
        .gallery-item:nth-child(8) { grid-row: span 2; }
        .gallery-item:nth-child(11) { grid-row: span 2; }

        @media (max-width: 768px) {
            .lightgallery-container {
                grid-template-columns: repeat(2, 1fr);
                gap: 4px;
            }
        }

        @media (max-width: 480px) {
            .lightgallery-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="w-full bg-[#0d079f]">
        <!-- Top white line -->
        {#        <div class="h-2 w-full bg-white"></div>#}

        <!-- Main content section between the white lines -->
        <div class="relative flex items-center justify-between px-4 py-2">
            <!-- Logo circle -->
            <div class="flex items-center">
                <div class="relative z-10 h-24 w-24 overflow-hidden rounded-full border-4 border-white">
                    <img src="{{ asset('images/bouleHeader.png') }}" alt="boule de pétanque" class="h-full w-full object-cover"/>
                </div>
                <!-- Title -->
                <h1 class="ml-4 text-3xl font-bold text-white">Galerie photos</h1>
            </div>

            <!-- Social icons -->
            <div class="flex items-center gap-4">
                <!-- Facebook icon -->
                <a href="#" class="text-white hover:text-gray-200 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                    </svg>
                </a>
                <!-- Mail icon -->
                <a href="#" class="text-white hover:text-gray-200 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </a>
            </div>
        </div>

        <!-- Bottom white line -->
        {#        <div class="h-2 w-full bg-white"></div>#}
    </div>

    <main class="min-h-[calc(100vh-120px)] bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
        <!-- Éléments décoratifs -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none z-0">
            <div class="absolute -top-20 -left-20 w-64 h-64 rounded-full bg-[#0d079f]/20"></div>
            <div class="absolute top-1/3 right-10 w-96 h-96 rounded-full bg-[#0d079f]/30"></div>
            <div class="absolute bottom-10 left-1/4 w-72 h-72 rounded-full bg-[#0d079f]/20"></div>

            <!-- Silhouettes de boules de pétanque -->
            <div class="absolute top-20 right-20 w-16 h-16 rounded-full border-2 border-gray-400/25"></div>
            <div class="absolute bottom-40 left-20 w-12 h-12 rounded-full border-2 border-gray-400/25"></div>
            <div class="absolute top-1/2 left-1/3 w-10 h-10 rounded-full border-2 border-gray-400/25"></div>
        </div>

        <div class="max-w-7xl mx-auto relative z-10">
            <!-- Breadcrumb navigation -->
            <nav class="flex mb-6" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a href="{{ path('app_home') }}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-[#0d079f]">
                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                            </svg>
                            Accueil
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <a href="{{ path('app_gallery') }}" class="ml-1 text-sm font-medium text-gray-700 hover:text-[#0d079f] md:ml-2">Galeries</a>
                        </div>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">{{ gallery.title }}</span>
                        </div>
                    </li>
                </ol>
            </nav>

            <!-- Gallery Header -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
                <div class="relative h-64 md:h-80">
                    {% set featuredImage = gallery.pictures|first %}
                    {% if featuredImage %}
                        <div class="absolute inset-0">
                            <img src="{{ asset('/images/gallery/' ~ featuredImage.imageName) }}"
                                 alt="Image principale de {{ gallery.title }}"
                                 class="w-full h-full object-cover"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
                        </div>
                    {% endif %}

                    <div class="absolute bottom-0 left-0 p-6 w-full">
                        <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">{{ gallery.title }}</h1>

                        <div class="flex items-center text-white mt-2">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <span class="text-lg">{{ gallery.pictures|length }} photos</span>

                            {% if gallery.createdAt is defined %}
                                <span class="mx-2">•</span>
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <span class="text-lg">{{ gallery.createdAt|date("d/m/Y") }}</span>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="p-6">
                    <p class="text-lg text-gray-700 leading-relaxed">{{ gallery.description }}</p>
                </div>
            </div>

            <!-- NOUVELLE GALERIE STYLE LIGHTGALLERY -->
            <div class="mb-12">
                <div class="lightgallery-container" id="lightgallery">
                    {% for picture in gallery.pictures %}
                        <a href="#" class="gallery-item" onclick="openModal('{{ asset('/images/gallery/' ~ picture.imageName) }}'); return false;">
                            <img src="{{ asset('/images/gallery/' ~ picture.imageName) }}"
                                 alt="Image {{ loop.index }} de {{ gallery.title }}"
                                 loading="lazy">
                        </a>
                    {% endfor %}
                </div>
            </div>

            <!-- Comments Section -->
            <div class="mt-10 bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="p-6">
                    <h3 class="text-2xl font-bold mb-6 pb-2 border-b border-gray-200 flex items-center">
                        <svg class="w-6 h-6 mr-2 text-[#0d079f]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
                        </svg>
                        Commentaires <span class="ml-2 text-sm font-medium text-gray-500 bg-gray-100 rounded-full px-2.5 py-0.5">{{ gallery.comments|filter(comment => comment.isPublished)|length }}</span>
                    </h3>

                    {% set publishedComments = gallery.comments|filter(comment => comment.isPublished) %}

                    {% if publishedComments|length > 0 %}
                        <div class="space-y-6">
                            {% for comment in publishedComments %}
                                <article class="p-6 text-base bg-gray-50 rounded-lg border border-gray-200">
                                    <footer class="flex justify-between items-center mb-2">
                                        <div class="flex items-center">
                                            <div class="inline-flex items-center mr-3 text-sm text-gray-900 font-semibold">
                                                <div class="mr-2 w-10 h-10 rounded-full bg-[#0d079f]/10 flex items-center justify-center text-[#0d079f] font-bold">
                                                    {{ comment.user.firstName|first|upper }}{{ comment.user.lastName|first|upper }}
                                                </div>
                                                {{ comment.user.firstName }} {{ comment.user.lastName }}
                                            </div>
                                        </div>
                                        <div class="text-sm text-gray-600 flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            {{ comment.createdAt|date("d/m/Y à H:i") }}
                                        </div>
                                    </footer>
                                    <p class="text-gray-700 whitespace-pre-line">{{ comment.content }}</p>
                                </article>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="flex items-center p-4 mb-4 text-sm text-gray-700 bg-gray-50 rounded-lg" role="alert">
                            <svg class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="font-medium">Aucun commentaire pour le moment. Soyez le premier à partager votre avis !</span>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Comment Form -->
            <div class="mt-8 bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="p-6">
                    {% if app.user %}
                        {% if hasCommented %}
                            <div class="flex p-4 mb-4 text-yellow-800 border-t-4 border-yellow-300 bg-yellow-50 rounded-lg" role="alert">
                                <svg class="flex-shrink-0 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                                </svg>
                                <div class="ml-3 text-sm font-medium">
                                    Vous avez déjà publié un commentaire pour cette galerie.
                                </div>
                            </div>
                        {% else %}
                            <h3 class="text-2xl font-bold mb-6 pb-2 border-b border-gray-200 flex items-center">
                                <svg class="w-6 h-6 mr-2 text-[#0d079f]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                                </svg>
                                Postez un commentaire
                            </h3>

                            {{ form_start(commentForm, {'attr': {'class': 'space-y-6'}}) }}
                            <div class="mb-4">
                                {{ form_label(commentForm.content, 'Votre commentaire', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900'}}) }}
                                {{ form_widget(commentForm.content, {
                                    'attr': {
                                        'class': 'block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-[#0d079f] focus:border-[#0d079f]',
                                        'rows': '4',
                                        'placeholder': 'Partagez votre avis...'
                                    }
                                }) }}
                                {{ form_errors(commentForm.content, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                            </div>

                            <div class="flex items-center justify-between">
                                <button type="submit" class="text-white bg-[#0d079f] hover:bg-[#0a0580] focus:ring-4 focus:ring-[#0d079f]/30 font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none transition-all duration-200 flex items-center" data-turbo="true">
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd"></path>
                                    </svg>
                                    Publier mon commentaire
                                </button>
                            </div>
                            {{ form_end(commentForm) }}
                        {% endif %}
                    {% else %}
                        <div class="flex p-4 text-sm text-red-800 border-t-4 border-red-300 bg-red-50 rounded-lg" role="alert">
                            <svg class="flex-shrink-0 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                            </svg>
                            <div class="ml-3 font-medium">
                                Vous devez être <a href="{{ path('app_login') }}" class="font-semibold underline hover:text-red-900">connecté</a> pour poster un commentaire.
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Improved Modal for Image -->
        <div id="imageModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-90 hidden">
            <div class="max-w-6xl w-full p-4 relative">
                <img id="modalImage" class="w-full h-auto max-h-[85vh] object-contain rounded-lg" src="/placeholder.svg" alt="Image agrandie">
                <button id="closeModal" class="absolute top-4 right-4 bg-white rounded-full p-2 hover:bg-gray-200 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>
    </main>

    <script>
        function openModal(imageSrc) {
            const modal = document.getElementById('imageModal');
            const modalImage = document.getElementById('modalImage');
            modalImage.src = imageSrc;
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        document.getElementById('closeModal').addEventListener('click', function () {
            const modal = document.getElementById('imageModal');
            modal.classList.add('hidden');
            document.body.style.overflow = '';
        });

        document.getElementById('imageModal').addEventListener('click', function (e) {
            if (e.target === this) {
                this.classList.add('hidden');
                document.body.style.overflow = '';
            }
        });

        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') {
                const modal = document.getElementById('imageModal');
                if (!modal.classList.contains('hidden')) {
                    modal.classList.add('hidden');
                    document.body.style.overflow = '';
                }
            }
        });

        // Animation de chargement pour la galerie
        document.addEventListener('DOMContentLoaded', function() {
            const galleryItems = document.querySelectorAll('.gallery-item');
            galleryItems.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    item.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, index * 50);
            });
        });
    </script>
{% endblock %}