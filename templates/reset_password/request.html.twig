{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="w-full bg-[#0d079f]">
        <!-- Top white line -->
        <div class="h-2 w-full bg-white"></div>

        <!-- Main content section between the white lines -->
        <div class="relative flex items-center justify-between px-4 py-2">
            <!-- Logo circle -->
            <div class="flex items-center">
                <div class="relative z-10 h-24 w-24 overflow-hidden rounded-full border-4 border-white p-2">
                    <img src="{{ asset('images/bouleHeader.png') }}" alt="boule de pétanque" class="h-full w-full object-cover mt-1"/>
                </div>

                <!-- Title -->
                <h1 class="ml-4 text-3xl font-bold text-white">Mot de passe oublié</h1>
            </div>

            <!-- Social icons -->
            <div class="flex items-center gap-4">
                <!-- Facebook icon -->
                <a href="#" class="text-white hover:text-gray-200 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                    </svg>
                </a>
                <!-- Mail icon -->
                <a href="{{ path('app_contact') }}" class="text-white hover:text-gray-200 transition-colors duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </a>
            </div>
        </div>

        <!-- Bottom white line -->
        <div class="h-2 w-full bg-white"></div>
    </div>

    <main class="min-h-[calc(100vh-120px)] bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
        <!-- Éléments décoratifs -->
        <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0 opacity-20">
            <div class="absolute -top-20 -left-20 w-64 h-64 rounded-full bg-[#0d079f]/30"></div>
            <div class="absolute top-1/3 right-10 w-96 h-96 rounded-full bg-[#0d079f]/20"></div>
            <div class="absolute bottom-10 left-1/4 w-72 h-72 rounded-full bg-[#0d079f]/25"></div>

            <!-- Silhouettes de boules de pétanque -->
            <div class="absolute top-20 right-20 w-16 h-16 rounded-full border-2 border-gray-400"></div>
            <div class="absolute bottom-40 left-20 w-12 h-12 rounded-full border-2 border-gray-400"></div>
            <div class="absolute top-1/2 left-1/3 w-10 h-10 rounded-full border-2 border-gray-400"></div>
        </div>

        <div class="max-w-7xl mx-auto relative z-10">
            <div class="max-w-md mx-auto">
                <!-- Messages d'erreur -->
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="mb-6 rounded-md bg-red-50 p-4 border-l-4 border-red-400">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-red-700">{{ flash_error }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

                <div class="bg-white py-8 px-6 shadow-xl rounded-xl border border-gray-100 w-full">
                    <div class="flex justify-center mb-6">
                        <div class="h-16 w-16 rounded-full bg-[#0d079f]/10 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-[#0d079f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                            </svg>
                        </div>
                    </div>

                    <h2 class="text-center text-2xl font-bold text-gray-900 mb-6">Réinitialiser votre mot de passe</h2>

                    <div class="mb-6 bg-blue-50 border-l-4 border-blue-400 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9a1 1 0 00-1-1z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-blue-700">
                                    Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                                </p>
                            </div>
                        </div>
                    </div>

                    {{ form_start(requestForm, {'attr': {'class': 'space-y-6'}}) }}
                    <div>
                        {{ form_label(requestForm.email, 'Adresse email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        <div class="relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                                </svg>
                            </div>
                            {{ form_widget(requestForm.email, {'attr': {'class': 'pl-10 block w-full px-3 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#0d079f] focus:border-[#0d079f]', 'placeholder': 'votre@email.com'}}) }}
                        </div>
                        {{ form_errors(requestForm.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>

                    <div>
                        <button type="submit" class="w-full flex justify-center items-center py-3 px-4 border border-transparent rounded-md shadow-sm text-white bg-[#0d079f] hover:bg-[#0a0580] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#0d079f] transition-colors duration-200">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                            Envoyer le lien de réinitialisation
                        </button>
                    </div>
                    {{ form_end(requestForm) }}

                    <div class="mt-6 text-center">
                        <a href="{{ path('app_login') }}" class="text-sm font-medium text-[#0d079f] hover:text-[#0a0580] transition-colors duration-200 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                            </svg>
                            Retour à la page de connexion
                        </a>
                    </div>
                </div>

                <!-- Aide supplémentaire -->
                <div class="mt-8 bg-white rounded-xl shadow-md p-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-3">Besoin d'aide ?</h3>
                    <div class="space-y-4">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#0d079f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-gray-700">Si vous ne recevez pas d'email, vérifiez votre dossier spam ou contactez-nous.</p>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#0d079f]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-gray-700">Vous pouvez également nous contacter par email à <a href="mailto:support@petanqueclub.fr" class="text-[#0d079f] hover:underline">support@petanqueclub.fr</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}